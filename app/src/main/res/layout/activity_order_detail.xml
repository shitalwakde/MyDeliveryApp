<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        android:background="@drawable/toolbar_blur_background"
        app:popupTheme="@style/AppTheme">
        <TextView
            android:id="@+id/tv_toolbar_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Detail"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_green_border"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_orderAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2018"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/colorBlack"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Date"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_deliveryDateTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Jun 2020"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginBottom="50dp"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Status"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/colorBlack"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_orderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Placed"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Albert Jhon"
                        android:fontFamily="@font/roboto_light"
                        android:layout_weight="1"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="albert@gmail.com, 9900000000"
                        android:fontFamily="@font/roboto_light"
                        android:layout_weight="1"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indira nagar, Nagpur, 440022"
                        android:fontFamily="@font/roboto_light"
                        android:layout_weight="1"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tracking Summary"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Date"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_orderDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="27 Jun 2020"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Date"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_deliveryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Jun 2020"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Information"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purchase Amount"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_purchaseAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2000"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charge"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_deliveryCharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  "
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GST"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_gst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  "
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wallet used"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  "
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tv_totalFinalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2018"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Type"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_paymentStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cash on delivery"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_order_view"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_deliver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="DELIVER"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>