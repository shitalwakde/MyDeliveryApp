<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        android:background="@drawable/toolbar_blur_background"
        app:popupTheme="@style/AppTheme">
        <TextView
            android:id="@+id/tv_toolbar_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Application"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rl_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/bg_border"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_available_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:text="Your next available slot"
            android:textColor="@color/colorBlack"
            android:drawableRight="@drawable/ic_outline"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/tv_slot"
            android:layout_below="@+id/tv_available_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_airport"
            android:drawablePadding="10dp"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:text="STANDRAD : 22 Jul, Wed 6:30 AM - 8:30 AM"
            android:padding="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_pending_order"
        android:layout_below="@+id/rl_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTodayPend"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_tpendtit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count"
                    android:fontFamily="@font/roboto"
                    android:text="Today Pending"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tpendtit"
                    android:fontFamily="@font/roboto"
                    android:text="Orders"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />

                <RelativeLayout
                    android:id="@+id/rl_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/orange"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true" />
                    <TextView
                        android:id="@+id/tv_pending_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTodayComp"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_tpendtit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count"
                    android:fontFamily="@font/roboto"
                    android:text="Today Completed"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tpendtit"
                    android:fontFamily="@font/roboto"
                    android:text="Orders"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/tv_completed_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_pending_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotalPend"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@id/tv_tpendtit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count"
                    android:fontFamily="@font/roboto"
                    android:text="Total Pending"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tpendtit"
                    android:fontFamily="@font/roboto"
                    android:text="Orders"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/red"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/tv_total_pending_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotalComp"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_tpendtit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count"
                    android:fontFamily="@font/roboto"
                    android:text="Total Completed"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tpendtit"
                    android:fontFamily="@font/roboto"
                    android:text="Orders"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack" />
            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/green"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/tv_total_completed_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>